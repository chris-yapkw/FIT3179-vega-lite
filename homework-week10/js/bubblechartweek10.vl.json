{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 400,
  "title": "Population Density in Asian Countries (2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/chrisykw/FIT3179-vega-lite/main/homework-week10/data/AsiaPopulation2020.csv"
  },
  "encoding": {
    "x": {
      "field": "Population",
      "type": "quantitative",
      "title": "Population",
      "axis": {"tickCount": 5},
      "scale": {"type": "log", "domain": [10000, 10000000000]}
    },
    "y": {
      "field": "LandArea",
      "type": "quantitative",
      "axis": {"tickCount": 4},
      "scale": {"type": "log", "domain": [1, 10000000]}
    }
  },
  "layer": [
    {
      "selection": {
        "country_highlight": {
          "type": "multi",
          "fields": ["Country"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Density",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10, 100, 1000, 10000],
            "range": [10, 50, 100, 200, 300]
          },
          "legend": {"format": ".1s"}
        },
        "color": {"field": "Country", "type": "nominal"},
        "opacity": {
          "condition": {"selection": "country_highlight", "value": 0.9},
          "value": 0.1
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ","},
          {"field": "LandArea", "type": "quantitative", "format": ","},
          {"field": "Density", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Japan' || datum['Country'] == 'Malaysia' || datum['Country'] == 'Macao' || datum['Country'] == 'Mongolia'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Population", "type": "quantitative", "format": ","},
          {"field": "LandArea", "type": "quantitative", "format": ","},
          {"field": "Density", "type": "quantitative", "format": ","}
        ]
      }
    }
  ],
  "config": {}
}